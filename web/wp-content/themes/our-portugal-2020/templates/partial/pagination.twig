{% set chevron = '<svg class="icon" aria-hidden="true" focusable="false"><use href="/wp-content/themes/our-portugal-2020/img/base/graphics/sprite.svg#icon-chevron"></use></svg>' %}

{% if posts.pagination.pages is not empty %}
  <nav class="pagination" aria-label="{{ fn('pll_e', 'Постраничная навигация') }}">
    <ul>
      {# Prev #}
      <li class="pagination__item">
        {% if posts.pagination.prev %}
        <a class="pagination__link" href="{{ posts.pagination.prev.link }}" aria-label="{{ fn('pll_e', 'Назад') }}">
          {{ chevron }}
        </a>
        {% else %}
        <span class="pagination__link is-disabled" aria-label="{{ fn('pll_e', 'Назад') }}">
          {{ chevron }}
        </span>
        {% endif %}
      </li>

      {# Pages #}
      {% for page in posts.pagination.pages %}
        {% if page.link %}
          <li class="pagination__item">
            <a class="pagination__link" href="{{ page.link }}">
              {{ page.title }}
            </a>
          </li>
        {% else %}
          <li class="pagination__item">
            <span class="pagination__link is-active">
              {{ page.title }}
            </span>
          </li>
        {% endif %}
      {% endfor %}

      {# Next #}
      {% if posts.pagination.next %}
        <li class="pagination__item">
          <a class="pagination__link" href="{{ posts.pagination.next.link }}" aria-label="{{ fn('pll_e', 'Вперёд') }}">
            {{ chevron_next }}
          </a>
          {% else %}
          <span class="pagination__link is-disabled" aria-label="{{ fn('pll_e', 'Вперёд') }}">
            {{ chevron_next }}
          </span>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
