
{% extends "/pages/base/base.twig" %}

{% block config %}
{{ parent() }}

{% set post = {
  lang: "ru",
  description: site.description,
  image: site.logo,
  link: site.url,
  body_classes: "is-home has-xl-hero"
} %}
{% endblock %}

{% block html_head %}
  {{ parent() }}

  {# <style>
  </style> #}
{% endblock %}

{# MAIN CONTENT ------------------------------------------------------------- #}
{% block content %}

  {# HERO #}
  <header class="hero">{# blue bg #}
    <div class="hero__content">
      <div class="row">
        <div class="col-md-8 col-lg-6">
          <h1 class="hero__title">
            Португальская золотая виза
          </h1>
          <p class="hero__summary">
            Европейский паспорт&nbsp;&mdash; <span class="nobr">от 280 тыс. евро.</span><br>
            С&nbsp;2013 года &laquo;золотую визу&raquo; получили свыше 300 россиян
          </p>
          <ul class="hero__cta">
            <li class="d-none d-mdl-block"><a href="/contact-us" class="btn is-cta">Связаться с нами</a></li>
            <li><a href="/calculate" class="btn is-outline is-inverted">Рассчитать стоимость</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="ribbon" role="presentation"></div>
  </header>

  {# KPI #}
  <div class="section has-kpi is-next-to-header" role="region">
    <div class="row">
      {% set kpi = {

        item1: {
          value: '800',
          caption: 'километров<br>береговой линии',
        },

        item2: {
          value: '300',
          caption: 'солнечных<br>дней в году',
        },

        item3: {
          value: '15',
          caption: 'объектов Всемирного<br>наследия ЮНЕСКО',
        },

        item4: {
          value: '1200',
          caption: 'г. до н. — начало<br>истории Лиссабона',
        },

      } %}

      {% for item in kpi %}
        <div class="col-md-3 is-{{ loop.index }}">
          <figure class="kpi">
            <span class="kpi__value">{{ item.value }}</span>
            <span class="kpi__caption">{{ item.caption }}</span>
          </figure>
        </div>
      {% endfor %}

    </div>{# / row #}
  </div>{# / .section #}

  {# REALTY #}
  <section class="section is-realty is-alt text-center">
    <h2 class="text-center mb-1">Каталог недвижимости</h2>

    <div class="carousel is-xs-sm has-3-properties slide" id="carouselRealty" data-ride="carousel" data-interval="false">
      <div class="carousel-inner">
        <div class="carousel-viewport">{# row #}
          {% set properties = {

            item1: {
              image: 'realty-01',
              title: 'Студия в Портимао, 68м²',
              price: '120 000',
              desc: 'Район — Pestana Dom João II. Полностью оборудованная кухня, крытый бассейн, сауна и турецкая баня.',
              bedrooms: '<b>0</b> спален',
              bathrooms: '<b>1</b> ванная',
              active: true
            },

            item2: {
              image: 'realty-02',
              title: 'Квартира в Лиссабоне, 60м²',
              price: '330 000',
              desc: '4 этаж. Полезая площадь — 188м2. Год постройки — 1951.',
              bedrooms: '<b>1</b> спальня',
              bathrooms: '<b>1</b> ванная'
            },

            item3: {
              image: 'realty-03',
              title: 'Дом в Алмаде, 148м²',
              price: '330 000',
              desc: 'Район Botequim, Charneca da Caparica. Двор 65м², барбекю и веранда. Капитальнй ремонт сделан в июле 2020-го.',
              bedrooms: '<b>4</b> спальни',
              bathrooms: '<b>2</b> ванных',
              optional: true
            },

          } %}

          {% for item in properties %}
            <div class="carousel-item {% if item.optional %} is-optional{% endif %}{% if item.active %} active{% endif %}">
              <a class="link is-box-wrapper" href="#">
                <div class="card">
                  <img class="card__img" src="/wp-content/themes/our-portugal-2020/img/placeholders/{{ item.image }}.jpg" alt="Португальская золотая виза">
                  <div class="card__copy">
                    <header>
                      <h3 class="card__eyebrow">{{ item.title }}</h3>
                      <p class="card__title">{{ item.price }} €</p>
                    </header>
                    <p class="card__summary">{{ item.desc }}</p>

                    <ul class="card__footer">
                      <li class="card__footer-item">
                        <svg class="icon" aria-hidden="true" focusable="false">
                          <use href="/wp-content/themes/our-portugal-2020/img/base/graphics/sprite.svg#icon-bed"></use>
                        </svg>
                        {{ item.bedrooms }}
                      </li>
                      <li class="card__footer-item">
                        <svg class="icon" aria-hidden="true" focusable="false">
                          <use href="/wp-content/themes/our-portugal-2020/img/base/graphics/sprite.svg#icon-bath"></use>
                        </svg>
                        {{ item.bathrooms }}
                      </li>
                    </ul>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
        <a class="carousel-control is-prev" href="#carouselRealty" role="button" data-slide="prev" aria-label="Назад"></a>
        <a class="carousel-control is-next" href="#carouselRealty" role="button" data-slide="next" aria-label="Вперёд"></a>
      </div>

      <ol class="carousel-indicators">
        <li data-target="#carouselRealty" data-slide-to="0" class="active"></li>
        <li data-target="#carouselRealty" data-slide-to="1"></li>
        <li data-target="#carouselRealty" data-slide-to="2"></li>
      </ol>
    </div>

    <a class="link is-cta mx-auto" href="/ru/real-estate">
      Все предложения
      <svg class="icon" aria-hidden="true" focusable="false">
        <use href="{{ site.theme.link }}/img/base/graphics/sprite.svg#icon-chevron-in-circle-sm"></use>
      </svg>
    </a>
  </section>

  {# BLOG & FORUM #}
  <div class="section">
    <div class="row justify-center">
      <section class="col-md-8 col-mdl-6 pr-mdl-2s">
        <h2 class="section__title mb-n2s"><a href="/ru/blog">Блог о Португалии</a></h2>

        <ul class="list-view pt-0">
          {% set teasers = {

            item1: {
              img: 'blog-01',
              tag: 'История',
              title: 'Лиссабон древнее Рима',
              lead: 'И вторая самая древняя столица в Европе после Афин. Старше Рима более чем на 400 лет. Историки',
              datetime: '2020-10-18',
              date: '18 окт 2020',
            },

            item2: {
              img: 'blog-02',
              tag: 'Вино',
              title: 'Вина Португалии из Порту и Доуру',
              lead: 'Это одно из самых популярных вин. В год продается более 120 млн. бутылок. Существует четыре вида Портвейна…',
              datetime: '2020-10-17',
              date: '17 окт 2020',
            },

            item3: {
              img: 'blog-03',
              tag: 'Рыбалка',
              title: 'Ловись брима большая и малень…',
              lead: 'На побережье провинции Алгарве рыбаку действительно есть где развернуться, что в плане места для…',
              datetime: '2020-10-16',
              date: '16 окт 2020',
            },

          } %}

          {% for item in teasers %}
            <li class="list-item">
              <a class="list-item__block-link" href="#">
                <figure class="list-item__figure">
                  <img src="/wp-content/themes/our-portugal-2020/img/placeholders/{{ item.img }}.jpg" alt="Португальская золотая виза">
                </figure>

                <div class="list-item__body">
                  <header class="list-item__header">
                    <span class="list-item__eyebrow">{{ item.tag }}</span>
                    <h3 class="list-item__title"><span>{{ item.title }}</span></h3>
                  </header>
                  <p>{{ item.lead }}</p>
                  <time datetime="{{ item.datetime }}">{{ item.date }}</time>
                </div>
              </a>
            </li>
          {% endfor %}
        </ul>
      </section>

      <section class="d-none d-mdl-block col-mdl-6 pl-mdl-2s">
        <h2 class="section__title mb-n1"><a href="/ru/forum">Форум о Португалии</a></h2>
        <table class="table">
          <thead>
            <tr>
              <th class="table__topic-icon" scope="col"></th>
              <th class="table__question" scope="col">Вопросы</th>
              <th class="table__count" scope="col">Ответы</th>
            </tr>
          </thead>
          <tbody>
            {% set topics = {

                item1: {
                  icon: 'checkmark',
                  question: 'Виза Португалия',
                  answers: 0
                },

                item2: {
                  icon: 'plane',
                  question: 'Можно лететь в Португалию???',
                  answers: 1
                },

                item3: {
                  icon: 'beach',
                  question: 'Серфинг - нужны советы)',
                  answers: 1
                },

                item4: {
                  icon: 'car',
                  question: 'Проездной',
                  answers: 6
                },

                item5: {
                  icon: 'plane',
                  question: 'Стоит ли ехать в конце апреля??',
                  answers: 6
                },

                item6: {
                  icon: 'bag',
                  question: 'Доставка шариков в Лиссабоне',
                  answers: 0
                },

                item7: {
                  icon: 'cafe',
                  question: 'Кафе послушать фаду',
                  answers: 2
                },

                item8: {
                  icon: 'map',
                  question: 'Douro Valley (Долину Дору)',
                  answers: 0
                },

                item9: {
                  icon: 'car',
                  question: 'Бесплатная парковка',
                  answers: 4
                },

                item10: {
                  icon: 'coin',
                  question: 'Лайфхак: как перевести деньги за границу без комиссии',
                  answers: 5
                },
              } %}

            {% for item in topics %}
              <tr>
                <td class="table__topic-icon">
                  <svg class="icon" aria-hidden="true" focusable="false">
                    <use href="/wp-content/themes/our-portugal-2020/img/base/graphics/sprite.svg#icon-{{ item.icon }}"></use>
                  </svg>
                </td>
                <td class="table__question">
                  <a href="#">{{ item.question }}</a>
                </td>
                <td class="table__count">{{ item.answers }}</td>
              </tr>
            {% endfor %}

          </tbody>
        </table>
        <a href="/ru/forum/new-topic" class="btn is-outline">Задать вопрос</a>
      </section>
    </div>
  </div>

{% endblock %}

